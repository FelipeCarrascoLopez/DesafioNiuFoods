<body class="sb-nav-fixed">
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <div class="row">
                    <div class="col-12">
                        <h1><%= @store.name %></h1>

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Last Updated</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @devices.each do |device| %>
                                    <tr>
                                        <td><%= device.name %></td>
                                        <td><%= Time.now.in_time_zone("Santiago") %></td>
                                        <td><%= device.status %></td>
                                    </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-12">
    <a href="<%= new_device_path %>" class="btn btn-primary">Agregar Dispositivo</a>
</div>

            </div>
        </main>
        <footer class="py-4 bg-light mt-auto">
            <div class="container-fluid px-4">
                <div class="d-flex align-items-center justify-content-between small">
                </div>
            </div>
        </footer>
    </div>
</body>
